<?xml version="1.0" encoding="UTF-8" ?>
<grammar xmlns="http://www.w3.org/2001/06/grammar" version="1.0" xml:lang="en-US" root="rootRule">
    <!-- The first way to load a grammer is by specifying a grammer.xml file according to the https://www.w3.org/TR/speech-grammar/ standard. -->
    <!-- See https://docs.microsoft.com/en-us/previous-versions/office/developer/speech-technologies/hh361658(v=office.14) for an example -->
    <rule id="rootRule">
        <one-of>
            <!-- Move Closer Commands -->
            <item>closer</item>
            <item>move closer</item>
            <item>come</item>
            <item>come nearer</item>
            <item>nearer</item>
            <item>near</item>
            <item>go near</item>
            <item>approach</item>
            <item>come closer</item>
            <item>get closer</item>
            <item>move near</item>
            <item>step closer</item>
            <item>step near</item>
            <!-- Move Away Commands -->
            <item>away</item>
            <item>move away</item>
            <item>go</item>
            <item>go farther</item>
            <item>farther</item>
            <item>far</item>
            <item>go far</item>
            <item>retreat</item>
            <item>back</item>
            <item>move back</item>
            <item>step back</item>
            <item>back off</item>
            <item>get away</item>
            <item>move farther</item>
            <!-- Stop Commands -->
            <item>stop</item>
            <item>stay</item>
            <item>halt</item>
            <item>cease</item>
            <item>pause</item>
            <item>hold</item>
            <item>freeze</item>
            <!-- Rotate Left Commands -->
            <item>left</item>
            <item>rotate left</item>
            <item>roll left</item>
            <item>turn left</item>
            <item>spin left</item>
            <!-- Rotate Right Commands -->
            <item>right</item>
            <item>rotate right</item>
            <item>roll right</item>
            <item>turn right</item>
            <item>spin right</item>
            <item>rotate</item>
            <item>roll</item>
            <item>turn</item>
            <item>spin</item>
            <!-- Rotate Up Commands -->
            <item>up</item>
            <item>rotate up</item>
            <item>roll up</item>
            <item>turn up</item>
            <item>spin up</item>
            <!-- Rotate Down Commands -->
            <item>down</item>
            <item>rotate down</item>
            <item>roll down</item>
            <item>turn down</item>
            <item>spin down</item>
        </one-of>
    </rule>
</grammar>